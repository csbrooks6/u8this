<h3 class="text-center">

<a href="<%= path_to_day @date.prev_day %>">
<button type="button" class="btn btn-default btn-lg pull-left">
  <span class="glyphicon glyphicon-chevron-left"></span>
</button>
</a>

<%= @date.strftime("%b %-d, %Y") %>

<% if @date < Date.today.next_day %>
  <a href="<%= path_to_day @date.next_day %>">
<% end %>
<button type="button" class="btn btn-default btn-lg pull-right">
  <span class="glyphicon glyphicon-chevron-right"></span>
</button>
<% if @date < Date.today.next_day %>
  </a>
<% end %>

</h3>

