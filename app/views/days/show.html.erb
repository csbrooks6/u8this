<h3 class="text-center">

<a href="<%= path_to_day @date.prev_day %>">
<button type="button" class="btn btn-default btn-lg pull-left">
  <span class="glyphicon glyphicon-chevron-left"></span>
</button>
</a>

<%= @date.strftime("%b %-d, %Y") %>

<% if @date < Date.today.next_day %>
  <a href="<%= path_to_day @date.next_day %>">
<% end %>
<button type="button" class="btn btn-default btn-lg pull-right">
  <span class="glyphicon glyphicon-chevron-right"></span>
</button>
<% if @date < Date.today.next_day %>
  </a>
<% end %>

</h3>

<br />
<br />

<h3>
  <%= @calories %> / <%= current_user.daily_calorie_goal %>
  <%= @calorie_percent %> %
</h3>
<div class="progress">
  <div class="progress-bar <%= @calorie_percent_type %>" role="progressbar" 
  aria-valuenow="<%= @calorie_percent_capped %>" 
  aria-valuemin="0" aria-valuemax="100" style="width: <%= @calorie_percent_capped %>%;">
    <span class="sr-only"><%= @calorie_percent %>% Complete</span>
  </div>
</div>

<div>
  <% @servings.each do |serving| %>
    <h5>
    <%= serving.quantity_as_str %>
    <%= serving.name %> - 
    <span class="badge"><%= serving.calories %> calories</span> 
  </h5>
  <% end %>
</div>
