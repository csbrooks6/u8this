<div class="row">
  <div class="col-sm-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Register</h3>
      </div>

      <div class="panel-body">
        <%= form_for @user do |f| %>
          <%= render :partial => "form", :object => f %>

          <div class="form_group">
            <div class="input-group">
                <button id="new_user_submit" type="submit" class="btn btn-default btn-primary">Register</button>
            </div>
          </div>  
        <% end %><!-- end form -->
      </div>
    </div>
  </div>

  <!-- misc current info -->
  <div class="col-sm-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Account Info</h3>
      </div>
      <div class="panel-body">    
        <p>Make an account! It's free, and takes 30 seconds!
      </div>
    </div>
  </div>

</div>  
