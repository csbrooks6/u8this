<div class="row">
  <div class="col-sm-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Settings</h3>
      </div>

      <div class="panel-body">
        <% if @user.errors.any? %>
        Errors:
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
        <% end %>

        <%= form_for @user, url: '/account' do |form| %>
          <div class="form_group">
            <div class="input-group">
              <span class="input-group-addon">Daily Calorie Goal</span>
              <input id="user_daily_calorie_goal" name="user[daily_calorie_goal]" type="text" class="form-control" 
                value="<%= @user.daily_calorie_goal %>">
            </div>
          </div>

          <br />

          <div class="form_group">
            <div class="input-group">
              <span class="input-group-addon">New Password</span>
              <input id="user_password" name="user[password]" type="password" class="form-control">
            </div>
          </div>

          <br />

          <div class="form_group">
            <div class="input-group">
              <span class="input-group-addon">Confirm Password</span>
              <input id="user_password_confirmation" name="user[password_confirmation]" type="password" class="form-control">
            </div>
          </div>

          <br />

          <div class="form_group">
            <div class="input-group">
                <button id="update_user_submit" type="submit" class="btn btn-default btn-primary">Apply</button>
            </div>
          </div>
        <% end %><!-- end form -->
      </div>
    </div>
  </div>

  <!-- misc current info -->
  <div class="col-sm-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Account Info</h3>
      </div>
      <div class="panel-body">    
        <p>
          <b>Email:</b>
          <%=h @user.email %>
        </p>

        <p>
          <b>Login count:</b>
          <%=h @user.login_count %>
        </p>

        <p>
          <b>Last request at:</b>
          <%=h @user.last_request_at %>
        </p>

        <p>
          <b>Last login at:</b>
          <%=h @user.last_login_at %>
        </p>

        <p>
          <b>Current login at:</b>
          <%=h @user.current_login_at %>
        </p>

        <p>
          <b>Last login ip:</b>
          <%=h @user.last_login_ip %>
        </p>

        <p>
          <b>Current login ip:</b>
          <%=h @user.current_login_ip %>
        </p>
      </div>
    </div>
  </div>

</div>