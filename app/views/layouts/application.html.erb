<!DOCTYPE html>
<html>
<head>
  <title>U8this</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<!-- Fixed navbar -->
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">u8this</a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="active"><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
        <% if !current_user %>
          <li><%= link_to "New Account", new_users_path %></li>
          <li><%= link_to "Log In", new_user_sessions_path %></li>
        <% else %>
          <li><%= link_to "My Account", users_path %></li>
          <li><%= link_to "Logout "+current_user.login, user_sessions_path, :method => :delete, :confirm => "Are you sure you want to logout?" %></li>
        <% end %>            
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>


<div class="container">
  <div class="starter-template">

  <% if flash[:notice] %>
    <div class="alert alert-warning alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <p><%= flash[:notice] %></p>
    </div>
  <% end %>  

<%= yield %>

  <div class="footer">
    <p>&copy; u8this <%= Time.now.year %> </p>
  </div>

</div>
</div>

</body>
</html>
